{
  "mcpServers": {
    "context7": {
      "command": "/bin/sh",
      "args": [
        "-c",
        "PATH=/run/current-system/sw/bin:/etc/profiles/per-user/$USER/bin:$PATH exec npx -y @upstash/context7-mcp"
      ]
    },
    "nixos": {
      "command": "/bin/sh",
      "args": [
        "-c",
        "PATH=/run/current-system/sw/bin:/etc/profiles/per-user/$USER/bin:$PATH exec uvx mcp-nixos"
      ]
    }
  }
}
